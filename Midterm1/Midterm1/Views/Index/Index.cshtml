
@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" type="text/css" href="~/Content/StyleSheetCustom.css">

<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:20%">
            <!-- This is the main menu to navigate to the other controllers foor Stack, Queue, Dictionary, and Exit -->
            <a href="@Url.Action("Index", "Stack")" class="w3-bar-item w3-button">Stack</a>
            <a href="@Url.Action("Index", "Queue")" class="w3-bar-item w3-button">Queue</a>
            <a href="@Url.Action("Index", "Dictionary")" class="w3-bar-item w3-button">Dictionary</a>
            <a href="@Url.Action("ExitApp","Exit")" class="w3-bar-item w3-button">Exit</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:25%">

        <div class="w3-container w3-teal">
            <h1>Home Page</h1>
        </div>

        <!-- Cool Kid picture -->
        <img src="~/Graphics/CoolKid.jpg" />

        <div class="w3-container">
            <h2>Sidebar Navigation</h2>
            <p>The sidebar width is set with "style="width:25%".</p>
            <p>The left margin of the page content is set to the same value.</p>
        </div>

        <!--this if statement, used with a razor, will show up only if viewbag.queue has been set to our queue-->
        @if (ViewBag.Queue != null)
        {
            <div>
                @foreach (var item in ViewBag.Queue)
                {
                    <p>@item</p>
                }
            </div>
        }

        <!--this if statement shows up for when users try to display or delete things from the queue and the queue is empty, its an error message-->
        @if (ViewBag.Empty != null)
        {
            <div>
                @ViewBag.Empty
            </div>
        }

        <!--this will make a form for users to search for an item in the queue if they click on search queue-->
        <div>
            @if (ViewBag.Search != null)
            {
                using (Html.BeginForm("SearchQueue", "Queue", FormMethod.Post))
                {
                    <label for="inputEmail">Search</label>
                    @Html.TextBox("Search here")
                    <button type="submit">Submit</button>
                }
            }

        </div>
    </div>

</body>
</html>